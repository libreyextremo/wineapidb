<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <title>Wine API DB</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <link href="css/flexslider.min.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="css/line-icons.min.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="css/elegant-icons.min.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="css/lightbox.min.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="css/theme-1.css" rel="stylesheet" type="text/css" media="all"/>
        <link href="css/custom.css" rel="stylesheet" type="text/css" media="all"/>
        <!--[if gte IE 9]>
        	<link rel="stylesheet" type="text/css" href="css/ie9.css" />
		    <![endif]-->
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700%7CRaleway:700' rel='stylesheet' type='text/css'>
        <script src="js/modernizr-2.6.2-respond-1.1.0.min.js"></script>
        <link href="http://fonts.googleapis.com/css?family=Cardo:400,400italic" rel="stylesheet" type="text/css">
        <link href="css/font-cardo.css" rel="stylesheet" type="text/css">
        <link rel="icon" type="image/png" href="/img/favicon.png" />
    </head>

    <body ng-app="wineApp" ng-controller="WineAppController">
    	<div class="loader">
    		<div class="spinner">
  			  <div class="double-bounce1"></div>
  			  <div class="double-bounce2"></div>
			  </div>
      </div>
  		<div class="nav-container">
  			<nav class="centered-logo top-bar">
  				<div class="container">
  					<div class="row">
  						<div class="col-sm-12 text-center">
  							<a href="index.html">
  							  <img class="logo logo-dark" alt="Logo" src="img/logotype_white.png">
                </a>
  						</div>
  					</div>
  					<div class="row nav-menu">
  						<div class="col-sm-12 columns text-center">
  							<ul class="menu">
                  <li><a href="index.html" target="_self">Home</a></li>
                  <li><a href="find.html" target="_self">Find a wine</a></li>
                  <li><a href="developer.html" target="_self">Developer </a></li>
                  <li><a href="about.html" target="_self">About us</a></li>
                  <li><a href="contact.html" target="_self">Contact</a></li>
  							</ul>
  						</div>
  					</div>
  					<div class="mobile-toggle">
  						<i class="icon icon_menu"></i>
  					</div>
  				</div>
  				<div class="bottom-border"></div>
  			</nav>
  		</div>

  		<div class="main-container">
        <section class="bg-primary">
  				<div class="container">
  					<div class="row">
  							<div class="text-center">
                    Wine name:&nbsp;&nbsp;&nbsp;&nbsp;<input id="searchTerm" name="searchTerm" type="text" width="400px" style="color: #820233;" ng-model="searchTerm">
  							</div>
  					</div>
  				</div>
  			</section>
  			<section class="team-1">
  				<div class="container">
                    <div class="row" ng-show="wines.length == 0">Loading wines...</div>
                    <div class="row" ng-show="wines.length">
                      <div class="col-sm-4">
                        <div class="team-1-member">
                        	<h5>{{wine.API_winename}}</h5>
                            <span>{{wine.API_winery}}</span><br>
                            <img alt="Team Member" class="background-image" ng-src="img/{{wine.API_url_picture}}" width="172" height="172"/>

                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="team-1-member">
                            <p class="lead" align="left">
                            	<strong>{{wine.API_description}}</strong><br>
                        		{{wine.API_characteristics}}<br>
                                <hr>
                                <strong>Variety</strong>: {{wine.API_variety}}<br>
                                <strong>Winery</strong>: {{wine.API_winery}}<br>
                                <strong>D.O.</strong>: {{wine.API_denomination_of_origen}}<br>
                                <hr>
                                <strong>Price</strong>: {{wine.API_price}} {{wine.API_price_currency}}<br>
                                <strong>Volume</strong>: {{wine.API_volume}}<br>
                                <strong>Alcohol</strong>: {{wine.API_alcohol}}<br>
                                <strong>Serve at</strong>: {{wine.API_serve}}<br>
                                <hr>
                                <strong>Rating</strong>: {{wine.API_rating}} ({{wine.API_rating_entity}})<br>
                                <strong>Serve at</strong>: {{wine.API_rating_entity}}<br>


  							</p>
                        </div>
                      </div>
  					</div>
  				</div>
  			</section>

  			<section class="bg-primary">
  				<div class="container">
  					<div class="row">
  						<div class="col-sm-8 col-sm-offset-2">
  							<div class="testimonials-slider text-center">
  								<ul class="slides">
  									<li>
  										<p class="text-white lead">Beer is made by men, wine by God. </p>
  										<span class="author text-white">Martin Luther</span>
  									</li>
  									<li>
  										<p class="text-white lead">Wine is a constant proof that God loves us, and loves to see us happy.</p>
  										<span class="author text-white">Benjamin Franklin</span>
  									</li>
  									<li>
  										<p class="text-white lead">Accept what life offers you and try to drink from every cup. All wines should be tasted; some should only be sipped, but with others, drink the whole bottle.</p>
  										<span class="author text-white">Paulo Coelho</span>
  									</li>
  								</ul>
  							</div>
  						</div>
  					</div>
  				</div>
  			</section>
  		</div>

  		<div class="footer-container">
  			<bottom></bottom>
  		</div>

  		<script src="https://www.youtube.com/iframe_api"></script>
  		<script src="js/jquery.min.js"></script>
      <script src="js/jquery.plugin.min.js"></script>
      <script src="js/bootstrap.min.js"></script>
      <script src="js/jquery.flexslider-min.js"></script>
      <script src="js/smooth-scroll.min.js"></script>
      <script src="js/skrollr.min.js"></script>
      <script src="js/spectragram.min.js"></script>
      <script src="js/scrollReveal.min.js"></script>
      <script src="js/isotope.min.js"></script>
      <script src="js/twitterFetcher_v10_min.js"></script>
      <script src="js/lightbox.min.js"></script>
      <script src="js/jquery.countdown.min.js"></script>
      <script src="js/scripts.js"></script>
  		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js"></script>
  		<script src="js/angular/winecontroller.js"></script>

    </body>
</html>
